<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.ERezApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">@color/neutral</item>
        <item name="android:navigationBarColor">@color/neutral</item>
        <item name="android:colorBackground">@color/neutral</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <!--Needed to make the dialog rounded, otherwise it does not have it-->
    <style name="ThemeOverlay.MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>
    <!--To add margins to the Snackbar-->
    <style name="Widget.MaterialComponents.Snackbar.Margins" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>
